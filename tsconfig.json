{
  "compilerOptions": {
    "lib": ["es2021"],
    "target": "es2021",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "#/*": ["./*", "src/*"],
      "#types/*": ["src/@types/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
  },
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}
